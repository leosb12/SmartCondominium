{
  "name": "si2-mono",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev:web",
    "dev:web": "npm run dev -w @si2/web",
    "dev:all": "turbo run dev --parallel",
