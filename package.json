{
  "name": "si2-mono",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
"scripts": {
  "dev": "turbo run dev --parallel",
  "dev:web": "npm run dev -w @si2/web",
  "dev:backend": "npm run dev -w @si2/backend",
  "dev:mobile": "npm run dev -w @si2/mobile",
  "build": "turbo run build",
  "lint": "turbo run lint",
  "format": "turbo run format"
},

  "devDependencies": {
    "turbo": "^2.0.0"
  },
  "packageManager": "npm@10.9.2",
  "dependencies": {
    "@tailwindcss/vite": "^4.1.13",
    "tailwindcss": "^4.1.13"
  }
}
